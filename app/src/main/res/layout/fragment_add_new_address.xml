<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/layout_add_new_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:contentInsetStart="@dimen/dp_0">


                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/_back_icon" />


                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/address"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    android:visibility="visible"
                    app:font="@{`lato_bold`}" />
            </androidx.appcompat.widget.Toolbar>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLightGrey" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layout_add_new_address">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtPinCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/pin_code"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:paddingStart="@dimen/sp_18"
                        android:paddingTop="@dimen/sp_18"
                        android:paddingEnd="@dimen/sp_18"
                        android:scrollHorizontally="true"
                        android:textColorHint="@color/colorExremeLite"
                        android:textColor="@color/colorLoginSignupText"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorLightGrey" />

                    <EditText
                        android:id="@+id/edtLocality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="start"
                        android:hint="@string/locality"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="@dimen/sp_18"
                        android:paddingTop="@dimen/sp_18"
                        android:paddingEnd="@dimen/sp_18"
                        android:textColorHint="@color/colorExremeLite"
                        android:textColor="@color/colorLoginSignupText"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorLightGrey" />

                    <EditText
                        android:id="@+id/edtCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="start"
                        android:hint="@string/city"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="@dimen/sp_18"
                        android:paddingTop="@dimen/sp_18"
                        android:paddingEnd="@dimen/sp_18"
                        android:textColorHint="@color/colorExremeLite"
                        android:textColor="@color/colorLoginSignupText"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorLightGrey" />

                    <EditText
                        android:id="@+id/edtState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="start"
                        android:hint="@string/state"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="@dimen/sp_18"
                        android:paddingTop="@dimen/sp_18"
                        android:paddingEnd="@dimen/sp_18"
                        android:textColorHint="@color/colorExremeLite"
                        android:textColor="@color/colorLoginSignupText"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorLightGrey" />

                    <EditText
                        android:id="@+id/edtFullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="start"
                        android:hint="@string/name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:paddingStart="@dimen/sp_18"
                        android:paddingTop="@dimen/sp_18"
                        android:paddingEnd="@dimen/sp_18"
                        android:textColorHint="@color/colorExremeLite"
                        android:textColor="@color/colorLoginSignupText"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorLightGrey" />

                    <EditText
                        android:id="@+id/edtGender"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:background="@drawable/drawable_rectangle_grey"
                        android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="start"
                        android:hint="@string/address"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textNoSuggestions"
                        android:maxLength="40"
                        android:maxLines="1"
                        android:padding="@dimen/dp_18"
                        android:scrollHorizontally="true"
                        android:textColorHint="@color/colorExremeLite"
                        android:textColor="@color/colorLoginSignupText"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <EditText
                        android:id="@+id/edtMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/mobile_number"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLength="15"
                        android:maxLines="1"
                        android:paddingStart="@dimen/sp_18"
                        android:paddingTop="@dimen/sp_18"
                        android:paddingEnd="@dimen/sp_18"
                        android:textColorHint="@color/colorExremeLite"
                        android:textColor="@color/colorLoginSignupText"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@color/colorLightGrey" />

                    <TextView
                        android:id="@+id/edtDOB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:gravity="start"
                        android:text="@string/type_of_address"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rdbGame"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/sp_5"
                            android:layout_weight="1"
                            android:button="@drawable/selected_new_number"
                            android:padding="@dimen/dp_10"
                            android:text="Home"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp" />

                        <RadioButton
                            android:id="@+id/rdbPractice"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_weight="1"
                            android:button="@drawable/selected_new_number"
                            android:padding="@dimen/dp_10"
                            android:text="Office/Commercial"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp" />

                    </RadioGroup>


                    <CheckBox
                        android:id="@+id/chbSelectPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/colorLightGrey"
                        android:text="Make this my default address"
                        android:layout_marginStart="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_20"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/llTop"
                        android:gravity="center"
                        android:padding="@dimen/dp_20">

                        <TextView
                            android:id="@+id/tvLogout"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_50"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_rectangle_grey"
                            android:gravity="center"
                            android:text="cancel"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp"
                            app:font="@{`lato_regular`}" />

                        <TextView
                            android:id="@+id/tvLoppogout"
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_50"
                            android:layout_marginStart="@dimen/dp_30"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_gradient_line"
                            android:gravity="center"
                            android:text="Save  "
                            android:textAllCaps="true"
                            android:textColor="@color/colorWhite"
                            android:textSize="14dp"
                            app:font="@{`lato_regular`}" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</layout>