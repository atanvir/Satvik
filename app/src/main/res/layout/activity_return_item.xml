<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlRecentOrdersOngoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="@dimen/dp_0">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:src="@drawable/_back_icon" />


            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Return Item"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                android:visibility="visible"
                app:font="@{`lato_regular`}" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/vieww"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/my_toolbar"
            android:background="@color/colorLiteGrey" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vieww">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlOrderNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="start"
                        android:text="Order Number:"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <TextView
                        android:id="@+id/tvOrderNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tvOrder"
                        android:gravity="start"
                        android:text="0123456789"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlOrderNo"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_8">

                    <LinearLayout
                        android:id="@+id/llTop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivProduct"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_150"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.5"
                            android:contentDescription="hotel"
                            android:gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/red_shirts" />

                        <RelativeLayout
                            android:id="@+id/rlFood"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="start">

                            <LinearLayout
                                android:id="@+id/llRight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:gravity="start"
                                android:orientation="vertical"
                                android:paddingStart="@dimen/dp_5"
                                android:paddingEnd="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_5">

                                <TextView
                                    android:id="@+id/tvProductName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="start"
                                    android:paddingStart="@dimen/dp_5"
                                    android:paddingEnd="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_2"
                                    android:text="Lee Jeans"
                                    android:textColor="@color/colorPureBlack"
                                    android:textSize="14dp"
                                    app:font="@{`lato_bold`}" />

                                <TextView
                                    android:id="@+id/tvProductDesc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="start"
                                    android:paddingStart="@dimen/dp_5"
                                    android:paddingEnd="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_2"
                                    android:text="Men Blue Fit Mid-RiseJeans"
                                    android:textColor="@color/colorExremeLite"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />

                                <RelativeLayout
                                    android:id="@+id/rlSize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/dp_5"
                                    android:paddingEnd="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_2">

                                    <LinearLayout
                                        android:id="@+id/llSize"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvSize"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:text="Size:"
                                            android:textColor="@color/colorExremeLite"
                                            android:textSize="14dp"
                                            app:font="@{`lato_regular`}" />


                                        <TextView
                                            android:id="@+id/tvSizeContent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:layout_marginStart="@dimen/dp_2"
                                            android:text="39"
                                            android:textColor="@color/colorExremeLite"
                                            android:textSize="14dp"
                                            app:font="@{`lato_regular`}" />

                                    </LinearLayout>

                                    <View
                                        android:id="@+id/view"
                                        android:layout_width="1dp"
                                        android:layout_height="13dp"
                                        android:layout_marginStart="@dimen/dp_3"
                                        android:layout_marginTop="@dimen/dp_4"
                                        android:layout_marginEnd="@dimen/dp_3"
                                        android:layout_toRightOf="@+id/llSize"
                                        android:background="@android:color/darker_gray" />

                                    <LinearLayout
                                        android:id="@+id/llQuantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/view"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvQuantity"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Qty:"
                                            android:textColor="@color/colorExremeLite"
                                            android:textSize="14dp"
                                            app:font="@{`lato_regular`}" />


                                        <TextView
                                            android:id="@+id/tvQuantityContent"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginStart="@dimen/dp_2"
                                            android:text="1"
                                            android:textColor="@color/colorExremeLite"
                                            android:textSize="14dp"
                                            app:font="@{`lato_regular`}" />
                                    </LinearLayout>


                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/rlRupee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/dp_5"
                                    android:paddingEnd="@dimen/dp_5"
                                    android:paddingBottom="@dimen/dp_2">

                                    <LinearLayout
                                        android:id="@+id/llRupee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <TextView
                                            android:id="@+id/tvRupee"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rs.1560.44"
                                            android:textColor="@color/colorPureBlack"
                                            android:textSize="14dp"
                                            app:font="@{`lato_bold`}" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/llRupeee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:layout_toRightOf="@+id/llRupee"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tvCuttedText"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:text="Rs.1500"
                                            android:textColor="@color/colorExremeLite"
                                            android:textSize="14dp"
                                            app:font="@{`lato_regular`}" />

                                        <TextView
                                            android:id="@+id/tvOff"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="73% OFF"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:textColor="@color/colorPercent"
                                            android:textSize="14dp"
                                            app:font="@{`lato_regular`}" />

                                    </LinearLayout>





                                    <LinearLayout
                                        android:id="@+id/llOff"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp_5"
                                        android:layout_toRightOf="@+id/llRupeee"
                                        android:orientation="horizontal"
                                        android:visibility="gone">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentStart="true"
                                            android:text="(20% OFF)"
                                            android:textColor="@color/colorPercent"
                                            android:textSize="14dp"
                                            app:font="@{`lato_regular`}" />

                                    </LinearLayout>


                                </RelativeLayout>


                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlValid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlTop">

                    <TextView
                        android:id="@+id/tvValid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="start"
                        android:text="Valid for return before:"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tvValid"
                        android:gravity="start"
                        android:text="21 May 2019"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvRefundAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlValid"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="start"
                    android:text="Refund Amount 4,200.00"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    app:font="@{`lato_regular`}" />

                <RelativeLayout
                    android:id="@+id/rlReturnPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRefundAmount">

                    <TextView
                        android:id="@+id/tvForMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="start"
                        android:text="For more information,please view our "
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />


                    <TextView
                        android:id="@+id/tvReturnPolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_toRightOf="@+id/tvForMore"
                        android:gravity="start"
                        android:text="Return Policy"
                        android:textColor="@color/colorLogOut"
                        android:textSize="14dp"
                        app:font="@{`lato_bold`}" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvPleaseTell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlReturnPolicy"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="start"
                    android:text="@string/please_tell_the_reason"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    app:font="@{`lato_bold`}" />

                <TextView
                    android:id="@+id/tvPleaseTellCorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPleaseTell"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="start"
                    android:text="Please tell correct reason for return.This information is only\nused to improve our service"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    app:font="@{`lato_regular`}" />

                <TextView
                    android:id="@+id/tvSelectIssue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvPleaseTellCorrect"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="start"
                    android:text="@string/select_issue_star"
                    android:textColor="@color/colorBlack"
                    android:textSize="14dp"
                    app:font="@{`lato_bold`}" />

                <RelativeLayout
                    android:id="@+id/rlReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSelectIssue"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/drawable_rectangle_grey_corner_1dp">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/tvMyReasonIsNotListed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="start|center"
                        android:text="My Reason Is Not Listed Here"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvMyReason"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorLightGrey" />

                    <RadioButton
                        android:id="@+id/tvTheProductDidNotFit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view1"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="start|center"
                        android:text="The Product Did't Fit Me"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvTheProduct"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorLightGrey" />

                    <RadioButton
                        android:id="@+id/tvReceivedADefective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view2"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="start|center"
                        android:text="Received A Defective Product"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvReceived"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorLightGrey" />

                        <RadioButton
                            android:id="@+id/tvReceivedAWrong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view3"
                            android:layout_marginStart="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="start|center"
                            android:text="Received A Wrong Product"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp"
                            app:font="@{`lato_regular`}" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvReceivedAWrong"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorLightGrey" />

                    <RadioButton
                        android:id="@+id/tvNotWorth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view4"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:gravity="start|center"
                        android:text="Not Worth The Value"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <View
                        android:visibility="gone"
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/tvNotWorth"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@color/colorLightGrey" />

                    </RadioGroup>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llCheckedUnchecked"
                    android:layout_below="@+id/rlReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                   <!-- <TextView
                        android:id="@+id/tvProductUnused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view5"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="start"
                        android:text="Product Is Unused"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />-->

                    <CheckBox
                        android:id="@+id/chbProductIsUnused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:button="@drawable/new_rect"
                        android:padding="@dimen/dp_10"
                        android:text="Product is unused"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp" />

                   <!-- <TextView
                        android:id="@+id/tvAllTheTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/view6"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="start"
                        android:text="All The Tag Are Intact"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />-->

                    <CheckBox
                        android:id="@+id/chbAllTagsIntact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginEnd="@dimen/dp_20"
                        android:button="@drawable/new_rect"
                        android:padding="@dimen/dp_10"
                        android:text="All the tags are intact"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp" />

                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/llAddress"
                    android:layout_below="@+id/llCheckedUnchecked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPickUpAddresss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llCheckedUnchecked"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_20"
                            android:gravity="start|center"
                            android:text="Default Address"
                            android:textColor="@color/colorPureBlack"
                            android:textSize="14dp"
                            android:visibility="visible"
                            app:font="@{`lato_regular`}" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvPickUpAddresss"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:gravity="start|center"
                            android:text="Mr. Sameer Kumar"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp"
                            android:visibility="visible"
                            app:font="@{`lato_regular`}" />

                        <LinearLayout
                            android:id="@+id/llName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvName"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Address:"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                            <TextView
                                android:id="@+id/tvLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/dp_5"
                                android:text="Mobulous,H-146/147,"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llName"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Mobile Number:"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/dp_5"
                                android:text="0123456789"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/tvAddNewAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_10"
                        android:gravity="center"
                        android:text="Add New Address"
                        android:textColor="@color/colorLogOut"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />
                    
                </LinearLayout>


                <View
                    android:id="@+id/view13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/llAddress"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey" />

                <LinearLayout
                    android:id="@+id/llChooseModeOfRefund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_below="@+id/view13"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSelectMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:text="Choose mode of refund"
                        android:textColor="@color/colorBlack"
                        android:textSize="14dp"
                        app:font="@{`lato_bold`}" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:src="@drawable/updown_rrr"/>
                </LinearLayout>


                <View
                    android:id="@+id/viewwwww"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/llChooseModeOfRefund"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey" />


                <EditText
                    android:id="@+id/edtAdditionalComment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_below="@+id/viewwwww"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/drawable_rectangle_grey_solid"
                    android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="start"
                    android:hint="Additional Comments"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords|textNoSuggestions"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_10"
                    android:scrollHorizontally="true"
                    android:textColor="@color/colorLoginSignupText"
                    android:textColorHint="@color/colorExremeLite"
                    android:textSize="14dp"
                    app:font="@{`lato_regular`}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edtAdditionalComment"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tvCancel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/drawable_rectangle_logout_btn_with_radius"
                        android:gravity="center"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/colorLogOut"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />

                    <TextView
                        android:id="@+id/tvProceed"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_weight="1"
                        android:background="@drawable/drawable_rectangle_logout_btn_with_radius"
                        android:gravity="center"
                        android:text="Proceed"
                        android:textAllCaps="false"
                        android:textColor="@color/colorLogOut"
                        android:textSize="14dp"
                        app:font="@{`lato_regular`}" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>

</layout>