<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="@dimen/dp_0">


            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="More On Myntra"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                android:visibility="visible"
                app:font="@{`lato_bold`}"/>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/viewOne"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/my_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/viewOne">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvForgotPass"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvMyOrders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:drawableStart="@drawable/box_icon7"
                    android:drawablePadding="5dp"
                    android:text="Shoe Size Finder"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    app:font="@{`lato_regular`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey" />


                <TextView
                    android:id="@+id/tvWishlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:drawableStart="@drawable/saved_98"
                    android:drawablePadding="5dp"
                    android:text="Shop With Friends"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    app:font="@{`lato_regular`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey" />


                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:drawableStart="@drawable/location_map4"
                    android:drawablePadding="5dp"
                    android:text="Gift Cards"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    app:font="@{`lato_regular`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:id="@+id/tvProfileDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:drawableStart="@drawable/resume_icon3"
                    android:drawablePadding="5dp"
                    android:text="Refer&amp;Earn "
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    app:font="@{`lato_regular`}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:id="@+id/tvNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="Help center"
                    android:textAllCaps="true"
                    android:textSize="14dp"
                    app:font="@{`lato_regular`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:id="@+id/tvHelpCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="FAQs"
                    android:textSize="14dp"
                    app:font="@{`lato_regular`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey" />

                <TextView
                    android:id="@+id/tvHelpCr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="ABOUT US"
                    android:textSize="14dp"
                    app:font="@{`lato_regular`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey"/>

                <TextView
                    android:id="@+id/tvHelpCenteghr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:text="Terms Of Use"
                    android:textAllCaps="true"
                    android:textSize="14dp"
                    app:font="@{`lato_regular`}"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/colorLightGrey"/>
            </LinearLayout>


        </ScrollView>

    </RelativeLayout>
</layout>