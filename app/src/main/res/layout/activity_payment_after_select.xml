                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvDebitCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_10"
                                android:text="Last 3 digits printed on the "
