<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlRecentOrdersOngoing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:contentInsetStart="@dimen/dp_0">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:src="@drawable/_back_icon" />


            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/return_order"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                android:visibility="visible"
                app:font="@{`lato_regular`}" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/viewwew"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/my_toolbar"
            android:background="@color/colorLiteGrey" />

        <RelativeLayout
            android:layout_below="@+id/viewwew"
            android:id="@+id/rlOrderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="start"
                android:text="Order Number:"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:font="@{`lato_regular`}" />

            <TextView
                android:id="@+id/tvOrderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@+id/tvOrder"
                android:gravity="start"
                android:text="0123456789"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:font="@{`lato_regular`}" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlOrderNo"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_8">

            <LinearLayout
                android:id="@+id/llTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:contentDescription="hotel"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image_77" />

                <RelativeLayout
                    android:id="@+id/rlFood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start">

                    <LinearLayout
                        android:id="@+id/llRight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5">

                        <TextView
                            android:id="@+id/tvFoodName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="start"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2"
                            android:text="Lee"
                            android:textColor="@color/colorPureBlack"
                            android:textSize="14dp"
                            app:font="@{`lato_bold`}" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="start"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2"
                            android:text="Men Blue Fit Mid-RiseJeans"
                            android:textColor="@color/colorExremeLite"
                            android:textSize="14dp"
                            app:font="@{`lato_regular`}" />

                        <RelativeLayout
                            android:id="@+id/rlSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2">

                            <LinearLayout
                                android:id="@+id/llSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvSize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:text="Size:"
                                    android:textColor="@color/colorExremeLite"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />


                                <TextView
                                    android:id="@+id/tvLength"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="@dimen/dp_2"
                                    android:text="39"
                                    android:textColor="@color/colorExremeLite"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />

                            </LinearLayout>

                            <View
                                android:id="@+id/view"
                                android:layout_toRightOf="@+id/llSize"
                                android:layout_width="1dp"
                                android:layout_height="13dp"
                                android:layout_marginTop="@dimen/dp_4"
                                android:layout_marginStart="@dimen/dp_3"
                                android:layout_marginEnd="@dimen/dp_3"
                                android:background="@android:color/darker_gray"/>

                            <LinearLayout
                                android:id="@+id/llQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/view"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvQuantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Qty:"
                                    android:textColor="@color/colorExremeLite"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />


                                <TextView
                                    android:id="@+id/tvSelect"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_2"
                                    android:text="1"
                                    android:textColor="@color/colorExremeLite"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />
                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llSold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Offer:"
                                android:textColor="@color/colorOffer"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                            <TextView
                                android:id="@+id/tvBlumentor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/dp_2"
                                android:text="Applied"
                                android:textColor="@color/colorOffer"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rlRupee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2">

                            <LinearLayout
                                android:id="@+id/llRupee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tvRupee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rs.1560.44"
                                    android:textColor="@color/colorPureBlack"
                                    android:textSize="14dp"
                                    app:font="@{`lato_bold`}" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llRupeee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_toRightOf="@+id/llRupee"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvCuttedText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:text="Rs.1500"
                                    android:textColor="@color/colorExremeLite"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/llOff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_5"
                                android:layout_toRightOf="@+id/llRupeee"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:text="(20% OFF)"
                                    android:textColor="@color/colorPercent"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />

                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Order Status:"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:text="Dispatched"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Order Date:"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlack"
                                app:font="@{`lato_regular`}" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Thursday,21 February 2019"
                                android:textSize="14dp"
                                android:textColor="@color/colorBlack"
                                app:font="@{`lato_regular`}" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Shipment Address:"
                                android:textColor="@color/colorPureBlack"
                                android:textSize="14dp"
                                app:font="@{`lato_bold`}" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="Mobulous"
                                android:textColor="@color/colorBlack"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/llTop"
                android:id="@+id/llCancelOrder"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:id="@+id/tvCancelOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:background="@drawable/drawable_rectangle_logout_btn_with_radius"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="Cancel Order"
                    android:textColor="@color/colorLogOut"
                    android:textSize="14dp"
                    app:font="@{`lato_regular`}" />

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rlTop"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLightGrey" />
    </RelativeLayout>


</layout>