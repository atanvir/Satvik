    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/root_bottomsheet_dialog"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350"
            android:background="@color/colorWhite"
            android:layout_margin="@dimen/dp_0">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="Welcome to Satvik"
                android:textColor="@color/colorLoginButtonEnd"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16dp"
                app:font="@{`lato_regular`}"/>

            <ImageView
                android:layout_below="@+id/tvWelcome"
                android:visibility="visible"
                android:id="@+id/ivCross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/dp_10"
                android:src="@drawable/close" />

            <TextView
                android:id="@+id/tvWelcomeDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:layout_below="@+id/tvWelcome"
                android:text="sign-up to get discount &amp; Free Shipping\n on your first order"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_14sdp"
                app:font="@{`lato_regular`}"/>

            <LinearLayout
                android:id="@+id/rlSocialLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWelcomeDesc"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/iv_fb"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_weight="1"
                    android:background="@drawable/facebook"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_google"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/google"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/rlSocialLogin"
                android:id="@+id/loginUsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_4">

                <View
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorLightGrey"></View>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_2"
                    android:text="or use email address "
                    android:textColor="@color/colorLightGrey"
                    app:font="@{`robo_regular`}" />

                <View
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/colorLightGrey"></View>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/loginSignup"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_below="@+id/loginUsing">

                <LinearLayout
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOG IN"
                        android:textColor="@color/colorAccent"
                        app:font="@{`lato_regular`}"/>

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_2"
                    android:background="@color/colorLightGrey"/>

                <LinearLayout
                    android:id="@+id/btnSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN UP"
                        android:textColor="@color/colorAccent"
                        app:font="@{`lato_regular`}"/>
                </LinearLayout>
            </LinearLayout>

            <CheckBox
                android:layout_below="@+id/loginSignup"
                android:id="@+id/chbSelectPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_70"
                android:layout_marginTop="@dimen/dp_10"
                android:button="@drawable/new_rect"
                android:padding="@dimen/dp_10"
                android:text="I have a referral registration code"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />


        </RelativeLayout>
    </RelativeLayout>

</layout>