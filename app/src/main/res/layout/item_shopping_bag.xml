<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlRecentOrdersOngoing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:padding="@dimen/dp_8">

            <LinearLayout
                android:id="@+id/llTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgFood"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:contentDescription="hotel"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shirt_design" />

                <RelativeLayout
                    android:id="@+id/rlFood"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="start">

                    <LinearLayout
                        android:id="@+id/llRight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="start"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_5"
                        android:paddingEnd="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5">

                        <TextView
                            android:id="@+id/tvFoodName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="start"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2"
                            android:text="Hangup"
                            android:textColor="@color/colorBlack"
                            android:textSize="14dp"
                            app:font="@{`lato_bold`}" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="start"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2"
                            android:text="Men Brown Printed Blazer"
                            android:textSize="14dp"
                            app:font="@{`lato_regular`}" />

                        <RelativeLayout
                            android:id="@+id/rlRupee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2">

                            <LinearLayout
                                android:id="@+id/llRupee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/rupees_icon" />


                                <TextView
                                    android:id="@+id/tvRupee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="@dimen/dp_2"
                                    android:text="1619"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14dp"
                                    app:font="@{`lato_bold`}" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llRupeee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_3"
                                android:layout_toRightOf="@+id/llRupee"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/dp_2"
                                    android:gravity="center"
                                    android:src="@drawable/rupees_icon" />


                                <TextView
                                    android:id="@+id/tvRupeee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="@dimen/dp_0"
                                    android:text="1000"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/dp_3"
                                android:layout_toRightOf="@+id/llRupeee"
                                android:gravity="start">

                                <TextView
                                    android:id="@+id/tvOrderDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(73% OFF)"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />

                            </LinearLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_3"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_2"
                            android:paddingEnd="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_2">

                            <LinearLayout
                                android:id="@+id/llSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvSize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="@dimen/dp_0"
                                    android:text="Size:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />


                                <TextView
                                    android:id="@+id/tvLength"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:text="39"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14dp"
                                    app:font="@{`lato_bold`}" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/llSize"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvQuantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_10"
                                    android:text="Qty:"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />


                                <TextView
                                    android:id="@+id/tvSelect"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:background="@drawable/drawable_rectangle_grey"
                                    android:drawableEnd="@drawable/updown_rrr"
                                    android:drawablePadding="@dimen/dp_20"
                                    android:text="0"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="14dp"
                                    app:font="@{`lato_regular`}" />
                            </LinearLayout>


                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/llSold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvSold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/dp_0"
                                android:paddingStart="@dimen/dp_5"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingEnd="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_2"
                                android:text="Sold by:"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                            <TextView
                                android:id="@+id/tvBlumentor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/dp_0"
                                android:paddingStart="@dimen/dp_5"
                                android:paddingTop="@dimen/dp_2"
                                android:paddingEnd="@dimen/dp_5"
                                android:paddingBottom="@dimen/dp_2"
                                android:text="Blumentor"
                                android:textSize="14dp"
                                app:font="@{`lato_regular`}" />


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rlTop"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/colorLightGrey" />

        <LinearLayout
            android:id="@+id/llRemove"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/view"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtYes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="REMOVE"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"
                app:font="@{`lato_bold`}" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@color/colorLightGrey">

            </View>

            <TextView
                android:id="@+id/txtNo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="MOVE TO WISHLIST"
                android:textColor="@color/colorLogOut"
                android:textSize="14dp"
                app:font="@{`lato_bold`}" />

        </LinearLayout>

        <View
            android:id="@+id/vieww"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llRemove"
            android:background="@color/colorLightGrey" />

        <View
            android:id="@+id/viewwww"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/vieww"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/colorLightGrey" />

        <LinearLayout
            android:id="@+id/llApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewwww"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_1"
                android:src="@drawable/promotion_ggg" />


            <TextView
                android:id="@+id/tvApply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/dp_5"
                android:text="Apply Coupon"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                app:font="@{`lato_regular`}" />

        </LinearLayout>

        <View
            android:id="@+id/viewww"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/llApply"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/colorLightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tvPlaceOrder"
            android:layout_below="@+id/viewww"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPriceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewww"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="start"
                android:text="Price Details"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                app:font="@{`lato_bold`}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPriceails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewww"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="start"
                    android:text="Total MRP"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_regular`}" />

                <TextView
                    android:id="@+id/tvPricjjeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="end"
                    android:text="3,980"
                    android:textAllCaps="true"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_regular`}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewww"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="start"
                    android:text="Discount"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_regular`}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="end"
                    android:text="-1,980"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_regular`}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewww"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="start"
                    android:text="Estimated Tax"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_regular`}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="end"
                    android:text="188"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_regular`}" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDeliveryCharges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewww"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="start"
                    android:text="Delivery Charges"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_regular`}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="end"
                    android:text="149"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_regular`}" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewww"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="start"
                    android:text="Total"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_bold`}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:gravity="end"
                    android:text="2230"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16"
                    app:font="@{`lato_bold`}" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:background="@drawable/drawable_gradient_line"
            android:gravity="center"
            android:text="Place Order"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16"
            android:visibility="visible"
            app:font="@{`lato_bold`}" />


    </RelativeLayout>


</layout>