<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/llCategoryItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dp_5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:scaleType="fitXY"
            android:src="@drawable/cute_kids" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Kids"
                android:textAllCaps="true"
                android:textColor="@color/colorPureBlack"
                android:textSize="10dp"
                app:font="@{`lato_bold`}" />

            <!-- <android.support.v7.widget.RecyclerView
                 android:id="@+id/categoryItemRecyclerView"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="#7ce1e1e1"
                 android:padding="12dp" />-->

            <TextView
                android:id="@+id/tvItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:padding="5dp"
                android:text="Kids"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="10dp"
                app:font="@{`lato_regular`}" />


            <TextView
                android:id="@+id/tvItem2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Kids"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="10dp"
                app:font="@{`lato_regular`}" />

            <TextView
                android:id="@+id/tvItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Kids"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="10dp"
                app:font="@{`lato_regular`}" />

            <TextView
                android:id="@+id/tvItem4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Kids"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="10dp"
                app:font="@{`lato_regular`}" />

            <TextView
                android:id="@+id/tvItem5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Kids"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="10dp"
                app:font="@{`lato_regular`}" />

            <TextView
                android:id="@+id/tvItem6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Kids"
                android:textAllCaps="true"
                android:textColor="@color/colorBlack"
                android:textSize="10dp"
                app:font="@{`lato_regular`}" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Shop All >"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPureBlack"
                android:textSize="10dp"
                app:font="@{`lato_bold`}" />

            <!-- <ImageView
                 android:id="@+id/img"
                 android:layout_gravity="center"
