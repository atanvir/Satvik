<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tvSelectSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="start"
        android:paddingStart="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:text="Select Size"
        android:textColor="@color/colorPureBlack"
        android:textSize="14dp"
        app:font="@{`lato_regular`}" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/tvSelectSize"
        android:id="@+id/recyclerSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_0"/>


    <TextView
        android:id="@+id/tvSelectColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recyclerSize"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="start"
        android:paddingStart="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_2"
        android:text="Select Color"
        android:textColor="@color/colorPureBlack"
        android:textSize="14dp"
        app:font="@{`lato_regular`}" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/tvSelectColor"
        android:id="@+id/recyclerColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_0"
        android:layout_marginBottom="@dimen/dp_0"/>

    <Button
        android:layout_below="@+id/recyclerColor"
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:background="@drawable/drawable_gradient_solid_corner"
        android:gravity="center"
        android:text="Submit"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="14dp"
        app:font="@{`lato_regular`}" />

</RelativeLayout>

</layout>
