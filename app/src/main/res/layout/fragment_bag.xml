            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Hey,it feels so light!"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16"
                app:font="@{`lato_bold`}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
